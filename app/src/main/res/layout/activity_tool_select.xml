<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_x="0dp"
    android:layout_y="0dp"
    android:background="#1b1b1b"
    android:backgroundTint="#1b1b1b"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logImg"
        android:layout_width="wrap_content"
        android:layout_height="332dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="-38dp"
        android:layout_marginEnd="-2dp"
        android:layout_x="6dp"
        android:layout_y="1dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/logov2k" />

    <Button
        android:id="@+id/SoundBtn"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="90dp"
        android:layout_marginBottom="171dp"
        android:layout_x="116dp"
        android:layout_y="566dp"
        android:backgroundTint="#1b1b1b"
        android:fontFamily="@font/peugeotnewhebrewregular"
        android:onClick="Sound"
        android:text="Sound"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#808080"
        android:textSize="16sp"
        android:textStyle="bold"
        app:rippleColor="#d84141"
        app:strokeColor="#d84141"
        app:strokeWidth="5px" />

    <Button
        android:id="@+id/VibrationBtn"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="425dp"
        android:layout_x="116dp"
        android:layout_y="479dp"
        android:backgroundTint="#1b1b1b"
        android:fontFamily="@font/peugeotnewhebrewregular"
        android:onClick="Vibra"
        android:text="Vibration"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#808080"
        android:textSize="16sp"
        android:textStyle="bold"
        app:iconTintMode="add"
        app:rippleColor="#d84141"
        app:strokeColor="#d84141"
        app:strokeWidth="5px" />

    <Button
        android:id="@+id/FlashBtn"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="425dp"
        android:layout_x="115dp"
        android:layout_y="393dp"
        android:backgroundTint="#1b1b1b"
        android:fontFamily="@font/peugeotnewhebrewregular"
        android:onClick="Flash"
        android:text="Flash"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#808080"
        android:textSize="16sp"
        android:textStyle="bold"
        app:iconTintMode="add"
        app:rippleColor="#d84141"
        app:strokeColor="#d84141"
        app:strokeWidth="5px" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="357dp"
        android:layout_x="128dp"
        android:layout_y="346dp"
        android:fontFamily="@font/progexregular"
        android:text="Choose a Tool"
        android:textColor="#808080"
        android:textSize="16sp" />

</AbsoluteLayout>