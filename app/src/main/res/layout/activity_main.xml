<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_x="0dp"
    android:layout_y="0dp"
    android:background="#1b1b1b"
    android:backgroundTint="#1b1b1b"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/SoundBtn"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="90dp"
        android:layout_marginBottom="171dp"
        android:layout_x="114dp"
        android:layout_y="593dp"
        android:backgroundTint="#1b1b1b"
        android:fontFamily="@font/peugeotnewhebrewregular"
        android:onClick="tool"
        android:text="Tools"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#808080"
        android:textSize="16sp"
        android:textStyle="bold"
        app:rippleColor="#d84141"
        app:strokeColor="#d84141"
        app:strokeWidth="5px" />

    <Button
        android:id="@+id/VibrationBtn"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="425dp"
        android:layout_x="113dp"
        android:layout_y="510dp"
        android:backgroundTint="#1b1b1b"
        android:fontFamily="@font/peugeotnewhebrewregular"
        android:onClick="camera"
        android:text="Camera"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#808080"
        android:textSize="16sp"
        android:textStyle="bold"
        app:iconTintMode="add"
        app:rippleColor="#d84141"
        app:strokeColor="#d84141"
        app:strokeWidth="5px" />

    <Button
        android:id="@+id/vibrationBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="425dp"
        android:layout_x="115dp"
        android:layout_y="423dp"
        android:backgroundTint="#1b1b1b"
        android:fontFamily="@font/peugeotnewhebrewregular"
        android:onClick="music"
        android:text="Music Player"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#808080"
        android:textSize="16sp"
        android:textStyle="bold"
        app:iconTintMode="add"
        app:rippleColor="#d84141"
        app:strokeColor="#d84141"
        app:strokeWidth="5px" />

    <Button
        android:id="@+id/FlashBtn"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="425dp"
        android:layout_x="113dp"
        android:layout_y="335dp"
        android:backgroundTint="#1b1b1b"
        android:fontFamily="@font/peugeotnewhebrewregular"
        android:onClick="game"
        android:text="Games"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#808080"
        android:textSize="16sp"
        android:textStyle="bold"
        app:iconTintMode="add"
        app:rippleColor="#d84141"
        app:strokeColor="#d84141"
        app:strokeWidth="5px" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="357dp"
        android:layout_x="97dp"
        android:layout_y="281dp"
        android:fontFamily="@font/progexregular"
        android:text="Choose a Category"
        android:textColor="#808080"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="472dp"
        android:layout_height="266dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="108dp"
        android:layout_x="-44dp"
        android:layout_y="1dp"
        android:onClick="laugh"
        app:srcCompat="@drawable/logogripng"
        tools:ignore="SpeakableTextPresentCheck" />

</AbsoluteLayout>