<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1b1b1b"
    tools:context=".GameSelectOP">

    <Button
        android:id="@+id/RdBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="426dp"
        android:layout_x="158dp"
        android:layout_y="622dp"
        android:backgroundTint="#1b1b1b"
        android:fontFamily="@font/peugeotnewhebrewregular"
        android:onClick="rdy"
        android:text="Ready"
        android:textAlignment="textStart"
        android:textColor="#808080"
        android:textSize="16sp"
        android:textStyle="bold"
        app:rippleColor="#d84141"
        app:strokeColor="#d84141"
        app:strokeWidth="5px" />

    <Button
        android:id="@+id/nxtBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="426dp"
        android:layout_x="287dp"
        android:layout_y="645dp"
        android:backgroundTint="#1b1b1b"
        android:fontFamily="@font/peugeotnewhebrewregular"
        android:onClick="nn"
        android:text="Next"
        android:textAlignment="textStart"
        android:textColor="#808080"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:rippleColor="#d84141"
        app:strokeColor="#d84141"
        app:strokeWidth="5px" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="-38dp"
        android:layout_marginEnd="-2dp"
        android:layout_x="0dp"
        android:layout_y="0dp"
        app:srcCompat="@drawable/logov2k" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="269dp"
        android:layout_x="165dp"
        android:layout_y="409dp"
        android:fontFamily="@font/progexregular"
        android:text="Choose"
        android:textColor="#808080"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/rkBTN"
        android:layout_width="122dp"
        android:layout_height="131dp"
        android:layout_x="5dp"
        android:layout_y="466dp"
        android:background="#1b1b1b"
        android:onClick="rk"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/rockg" />

    <ImageButton
        android:id="@+id/ppBTN"
        android:layout_width="122dp"
        android:layout_height="131dp"
        android:layout_x="147dp"
        android:layout_y="466dp"
        android:background="#1b1b1b"
        android:onClick="pp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/paperg" />

    <ImageButton
        android:id="@+id/ppIMG"
        android:layout_width="212dp"
        android:layout_height="181dp"
        android:layout_x="101dp"
        android:layout_y="117dp"
        android:background="#1b1b1b"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/logov2k" />

    <ImageButton
        android:id="@+id/scBTN"
        android:layout_width="122dp"
        android:layout_height="131dp"
        android:layout_x="279dp"
        android:layout_y="465dp"
        android:background="#1b1b1b"
        android:onClick="sc"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/scissorsg" />

    <TextView
        android:id="@+id/currentTXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="132dp"
        android:layout_y="329dp"
        android:fontFamily="@font/progexregular"
        android:text="0 - 0"
        android:textAlignment="center"
        android:textColor="#808080"
        android:textSize="48sp" />

</AbsoluteLayout>